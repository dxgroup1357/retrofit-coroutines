<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:name="com.mytasklist.androidandkotlinweekly.MyApplicationClass"
        android:theme="@style/Theme.AndroidAndKotlinWeekly"
        tools:targetApi="31">
        <activity
            android:name="com.mytasklist.androidandkotlinweekly.ui.splashscreen.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mytasklist.androidandkotlinweekly.ui.home.HomeActivity" />
        <activity android:name="com.mytasklist.androidandkotlinweekly.ui.main.MainActivity" />
        <activity android:name="com.mytasklist.androidandkotlinweekly.ui.textvIewdemos.TextViewDemoActivity" />
        <activity android:name="com.mytasklist.androidandkotlinweekly.ui.entries.EntriesActivity" />
        <activity android:name="com.mytasklist.androidandkotlinweekly.ui.bored.BoredActivity" />
        <activity android:name="com.mytasklist.androidandkotlinweekly.ui.designpatterndemo.DesignPatternActivity" />
        <activity android:name="com.mytasklist.androidandkotlinweekly.ui.addevent.AddEventActivity" />
        <activity android:name="com.mytasklist.androidandkotlinweekly.ui.database.SqliteActivity" />
        <activity android:name="com.mytasklist.androidandkotlinweekly.ui.viewevent.ViewEventActivity" />
        <activity android:name="com.mytasklist.androidandkotlinweekly.ui.mapacitity.MapActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />
    </application>

</manifest>