<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="android.view.View"/>

        <variable
            name="vm"
            type="com.mytasklist.androidandkotlinweekly.ui.home.HomeViewModel" />
    </data>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBoredActivity"
            android:layout_width="wrap_content"
            android:text="Bored Activity"
            android:onClick="@{()->vm.onBoredActionEvent()}"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDesignPattern"
            android:layout_width="wrap_content"
            android:text="Design Pattern Activity"
            android:onClick="@{()->vm.onDesignPatternEvent()}"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btnBoredActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSqliteDemo"
            android:layout_width="wrap_content"
            android:text="Sqlite Demo"
            android:onClick="@{()->vm.onSqliteEvent()}"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btnDesignPattern"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMapActivity"
            android:layout_width="wrap_content"
            android:text="MapActivity Demo"
            android:onClick="@{()->vm.onMapEventEvent()}"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btnSqliteDemo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/include_menu" />

</androidx.drawerlayout.widget.DrawerLayout>


</layout>